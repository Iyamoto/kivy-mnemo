<MenuScreen>:
    BoxLayout:
        padding: 10
        spacing: 10
        orientation: "vertical"
        Button:
            color: 1,0.5,0.2,1
            text: "Recall base"
            size_hint_y: 1
            on_press: root.manager.current = 'image'
        Button:
            color: 1,0.5,0.2,1
            text: "Recall numbers"
            size_hint_y: 1
        Button:
            color: 1,0.5,0.2,1
            text: "TBD"
            size_hint_y: 1


<ImageScreen>:
    BoxLayout:
        id: image_box
        orientation: "vertical"
        Image:
            color: 0, 0, 0
            canvas:
                Color:
                    rgb: (0.5, 0.5, 0.5)
                Rectangle:
                    texture: self.texture
                    size: self.width - 20, self.height - 20
                    pos: self.x + 10, self.y + 10
            size_hint_y: 0.9
        BoxLayout:
            padding: 5
            spacing: 5
            orientation: "horizontal"
            size_hint_y: 0.1
            Button:
                color: 1,0.5,0.2,1
                font_size: 20
                text: "Next image"
                size_hint_x: 1
                on_press: root.show_picture()
            Button:
                color: 1,0.5,0.2,1
                font_size: 20
                text: "Menu"
                size_hint_x: 1
                on_press: root.manager.current = 'menu'


<Picture>:
    Image:
        id: image
        source: root.source
        size: self.parent.width, self.parent.width / self.image_ratio
        allow_stretch: False
        keep_ratio: True

