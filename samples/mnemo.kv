<MenuScreen@Screen>:
    BoxLayout:
        padding: 10
        spacing: 10
        orientation: "vertical"
        Button:
            color: 1,0.5,0.2,1
            text: "Recall base"
            size_hint_y: 1
            on_press: root.manager.current = 'list'
        Button:
            color: 1,0.5,0.2,1
            text: "Recall numbers"
            size_hint_y: 1
            on_press: root.manager.current = 'image'
        Button:
            color: 1,0.5,0.2,1
            text: "TBD"
            size_hint_y: 1

<ListScreen@Screen>:
    BoxLayout:
        padding: 10
        spacing: 10
        orientation: "vertical"
        Label:
            color: 1,0.5,0.2,1
            text: "Choose base"
            size_hint_y: 0.1
        BoxLayout:
            size_hint_y: 0.9
            ListBases:

<ListBases@RecycleView>:
    viewclass: 'Label'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'


<ImageScreen@Screen>:
    BoxLayout:
        id: image_box
        orientation: "vertical"
        Picture:
#            color: 0, 0, 0
#            canvas:
#                Color:
#                    rgb: (0.5, 0.5, 0.5)
#                Rectangle:
#                    texture: self.texture
#                    size: self.width - 20, self.height - 20
#                    pos: self.x + 10, self.y + 10
            size_hint_y: 0.9
        BoxLayout:
            padding: 5
            spacing: 5
            orientation: "horizontal"
            size_hint_y: 0.1
            Button:
                color: 1,0.5,0.2,1
                font_size: 20
                text: "Next image"
                size_hint_x: 1
                on_press: root.show_picture()
            Button:
                color: 1,0.5,0.2,1
                font_size: 20
                text: "Menu"
                size_hint_x: 1
                on_press: root.manager.current = 'menu'


<Picture@Image>:
    Image:
        id: image
        source: root.source
        size: self.parent.width, self.parent.width / self.image_ratio
        allow_stretch: False
        keep_ratio: True

