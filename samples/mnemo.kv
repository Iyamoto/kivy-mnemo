<MenuScreen>:
    BoxLayout:
        padding: 10
        spacing: 10
        orientation: "vertical"
        Button:
            color: 1,0.5,0.2,1
            font_size: 40
            text: "Recall base"
            size_hint_y: 1
            on_press: root.manager.current = 'image'
        Button:
            color: 1,0.5,0.2,1
            font_size: 40
            text: "Recall numbers"
            size_hint_y: 1
        Button:
            color: 1,0.5,0.2,1
            font_size: 40
            text: "TBD"
            size_hint_y: 1


<ImageScreen>:
    padding: 5
    spacing: 5
    orientation: "vertical"
    BoxLayout:
        size_hint: 1, 1
        Widget:
    BoxLayout:
        padding: 5
        spacing: 5
        orientation: "horizontal"
        size_hint: 1, 0.1
        Button:
            color: 1,0.5,0.2,1
            font_size: 20
            text: "Next image"
            size_hint_x: 1
            on_press: root.show_picture()
        Button:
            color: 1,0.5,0.2,1
            font_size: 20
            text: "Menu"
            size_hint_x: 1
            on_press: root.manager.current = 'menu'


<Picture>:
    user_image: image
    Image:
        id: image
        source: root.source
        pos_hint: None, None
        pos: -200, -200
        size_hint: None, None
        size: 500, 500 / self.image_ratio
        allow_stretch: False
        keep_ratio: True

