<MenuScreen@Screen>:
    BoxLayout:
        padding: '5dp'
        spacing: '5dp'
        orientation: "vertical"
        Button:
            color: 1,0.5,0.2,1
            text: "Recall base"
            size_hint_y: 1
            font_size: '20sp'
            on_press: root.manager.current = 'list'
        Button:
            color: 1,0.5,0.2,1
            text: "Recall numbers"
            size_hint_y: 1
            font_size: '20sp'
            on_press: root.manager.current = 'image'
        Button:
            color: 1,0.5,0.2,1
            text: "TBD"
            font_size: '20sp'
            size_hint_y: 1

<ListScreen@Screen>:
    BoxLayout:
        padding: '5dp'
        spacing: '5dp'
        orientation: "vertical"
        Label:
            color: 1,0.5,0.2,1
            text: "Choose base"
            size_hint_y: 0.1
        Label:
            canvas.before:
                Color:
                    rgba: (1,1,1,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: None
            height: 1
        BoxLayout:
            size_hint_y: 0.9
            ListBases:
        Button:
            color: 1,0.5,0.2,1
            font_size: '20sp'
            text: "Menu"
            size_hint_y: 0.1
            on_press: root.manager.current = 'menu'

<ListBases@RecycleView>:
    viewclass: 'Label'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'


<ImageScreen@Screen>:
    BoxLayout:
        id: image_box
        orientation: "vertical"
        RelativeLayout:
            size_hint_y: 0.9

        BoxLayout:
            padding: '5dp'
            spacing: '5dp'
            orientation: "horizontal"
            size_hint_y: 0.1
            Button:
                color: 1,0.5,0.2,1
                font_size: '20sp'
                text: "Next image"
                size_hint_x: 1
                on_press: root.show_picture()
            Button:
                color: 1,0.5,0.2,1
                font_size: '20sp'
                text: "Menu"
                size_hint_x: 1
                on_press: root.manager.current = 'menu'


<Picture@Scatter>:
    rotation: -90
    Image:
        id: image
        source: root.source
        allow_stretch: True
        keep_ratio: False
