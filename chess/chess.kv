
<MenuScreen@Screen>:
    BoxLayout:
        padding: '5dp'
        spacing: '5dp'
        orientation: "vertical"
        Button:
            color: 1,0.5,0.2,1
            text: "Lessons"
            size_hint_y: 1
            font_size: '30sp'
            on_press: root.manager.current = 'lesson'
        Button:
            color: 1,0.5,0.2,1
            text: "TBD"
            size_hint_y: 1
            font_size: '30sp'
        Button:
            color: 1,0.5,0.2,1
            text: "TBD"
            font_size: '30sp'
            size_hint_y: 1
        Button:
            color: 1,0.5,0.2,1
            text: "TBD"
            font_size: '30sp'
            size_hint_y: 1
        Button:
            color: 1,0.5,0.2,1
            text: "TBD"
            font_size: '30sp'
            size_hint_y: 1

<LessonScreen@Screen>:
    BoxLayout:
        padding: '5dp'
        spacing: '5dp'
        orientation: "vertical"
        Label:
            color: 1,0.5,0.2,1
            font_size: '20sp'
            text: "Q:"
            size_hint_y: 0.2
        RelativeLayout:
            size_hint_y: 0.7
            canvas.before:
                Color:
                    rgb: (0.75, 0.75, 0.75)
                Rectangle:
                    pos: 0, 0
                    size: self.size
        BoxLayout:
            padding: '5dp'
            spacing: '5dp'
            orientation: "horizontal"
            size_hint_y: 0.1
            Button:
                color: 1,0.5,0.2,1
                font_size: '20sp'
                text: "MENU"
                size_hint_x: 1
                on_press: root.manager.current = 'menu'
            Button:
                color: 1,0.5,0.2,1
                font_size: '20sp'
                text: "Board"
                size_hint_x: 1
                on_press: root.show_board()
            Button:
                color: 1,0.5,0.2,1
                font_size: '20sp'
                text: "Next"
                size_hint_x: 1

<SvgWidget@Scatter>:
    pos_hint: {'top': 1}
    do_rotation: False
    do_scale: False
    do_scroll: False
    do_translation: False

<TextBoard@Label>:
    size_hint_y: 0.8
    font_size: '20sp'
    markup: True
    halign: 'center'
    text_size: self.width, None
    color: 0,0,0,1
